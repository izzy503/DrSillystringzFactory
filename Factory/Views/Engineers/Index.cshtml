@using Factory.Models;

<h2>Engineering Professionals</h2>

@if (@Model.Count == 0)
{
  <p>No Engineering Professionals on record yet. Let's build the team!</p>
}
else
{
  <ul>
  @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Employ a New Engineer", "Hire")</p>
<p>@Html.ActionLink("Return to Home", "Index", "Home")</p>
